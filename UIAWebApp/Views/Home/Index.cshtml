@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="flight" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="flight" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner3.png" alt="flight" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="flight" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Cutting Edge Aircraft</h2>
        <p>
            Our airline boasts a fleet of the most modern aircraft with the latest in aerospace advancements.
            Soaring to ever further distances, we commit to operating on the greatest fuel efficiency available.
        </p>
    </div>
    <div class="col-md-4">
        <h2>In-flight Services</h2>
        <p>
            We pride ourselves in providing the services <i>you</i> need during the flight.
            Offering you essential and up to date technologies such as USB charging ports and in-flight WiFi.
            Our flight attendants are among the best in the world and will help with anything you need during your flight.
        </p>
    </div>
    <div class="col-md-4">
        <h2>Free luggage capacity</h2>
        <p>
            We provide free baggage allowances for baggage that has size of lower than 158cm ( length + height + width)
            and a maximum weight of 23kg for Economy Class and 32kg for Business Class.
        </p>
    </div>
</div>
